<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.string.RegisterActivity"
    android:background="@color/colorPrimary">


    <EditText
        android:id="@+id/EmailEditor"
        android:layout_width="273dp"
        android:layout_height="43dp"
        android:layout_above="@+id/PasswordEditor"
        android:layout_alignStart="@+id/PasswordEditor"
        android:layout_marginBottom="7dp"
        android:background="@color/colorPrimary"
        android:drawableStart="@drawable/ic_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:text="@string/untitled" />

    <EditText
        android:id="@+id/PasswordEditor"
        android:layout_width="273dp"
        android:layout_height="43dp"
        android:layout_above="@+id/RegisterBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:background="@color/colorPrimary"
        android:drawableStart="@drawable/ic_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text="@string/untitled" />


    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="567dp"
        android:layout_marginEnd="360dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="567dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/RegisterBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="43dp"
        android:background="@color/colorAccent"
        android:text="Next" />

</RelativeLayout>

